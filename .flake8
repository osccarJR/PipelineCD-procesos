[flake8]
# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 10

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info

# Ignore specific errors
ignore =
    E203,
    E266,
    W503,
    E501

# Enable specific plugins
select = B,C,E,F,W,T4,B9

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403

# Show source code for each error
show-source = True

# Show pep8 violation statistics
statistics = True

# Count errors
count = True

# Extend ignore with additional rules
extend-ignore = B907,C901,F541
